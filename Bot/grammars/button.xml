<grammar version='1.0' xml:lang='en-gb' root='root' xmlns='http://www.w3.org/2001/06/grammar'>
	<rule id='root'>
		<one-of>
			<item><ruleref uri='bomb.xml'/></item>
			<item> tap <item repeat='0-1'> the button </item> </item>
			<item> hold <item repeat='0-1'> the button </item> </item>
			<item> release on <ruleref uri='bomb.xml#digit'/> </item>
		</one-of>
	</rule>
</grammar>
